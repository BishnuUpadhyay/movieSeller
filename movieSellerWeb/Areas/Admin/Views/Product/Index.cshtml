@model List<Product>


<div class="container">

    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary"> Product List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Product" asp-action="Create" class="btn btn-primary">Create Product</a>
        </div>
    </div>
</div>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Title</th>
            <th>ISBN</th>
            <th>Price</th>
            <th>Author</th>
            <th>Category</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var list in Model)
        {
            <tr>
                <td>@list.Title</td>
                <td>@list.ISBN</td>
                  <td>@list.Price</td>
                <td>@list.Author</td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Product" asp-action="Edit" asp-route-Id="@list.Id" class="btn btn-primary mx-2">Edit</a>
                        <a asp-controller="Product" asp-action="Delete" asp-route-Id="@list.Id" class="btn btn-danger mx-2">Delete</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>